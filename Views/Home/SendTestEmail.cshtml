@{
    ViewData["Title"] = "Test Email";
}

<div class="container mt-5">
    <h2 class="text-center text-info mb-4">Email Test</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info text-center">
            <p>@ViewBag.Message</p>  <!-- Display success/failure message -->
        </div>
    }

    <div class="text-center">
        <a asp-controller="Home" asp-action="SendTestEmail" class="btn btn-primary">Send Test Email</a>
    </div>

    <div class="mt-3 text-center">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
    </div>
</div>
