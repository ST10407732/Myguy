@using MYGUYY.Models
@{
    ViewData["Title"] = "Manage Tasks";
}

<h1>Manage Tasks</h1>

<!-- Display Task List -->
<h2>Tasks</h2>
<table class="table">
    <thead>
        <tr>
            <th>Task ID</th>
            <th>Description</th>
            <th>Client</th>
            <th>Driver</th>
            <th>Status</th>
            <th>Vehicle Type</th>
            <th>Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in ViewBag.Tasks as List<TaskRequest>)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.Description</td>
                <td>@task.Client?.Username</td>
                <td>@task.Driver?.Username</td>
                <td>@task.Status</td>
                <td>@task.VehicleType</td>
                <td>@task.Cost</td>
                <td>
                    <!-- Delete Task Button -->
                    <form method="post" asp-action="DeleteTask" asp-route-id="@task.Id" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                    <!-- Mark as Completed Button -->
                    @if (task.Status != "Completed")
                    {
                        <form method="post" asp-action="UpdateTaskStatus" asp-route-id="@task.Id" asp-route-status="Completed" class="d-inline">
                            <button type="submit" class="btn btn-primary">Mark as Completed</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
