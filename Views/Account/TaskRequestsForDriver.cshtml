@model IEnumerable<MYGUYY.Models.TaskRequest>

@{
    ViewData["Title"] = "Task Requests for Driver";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Task Requests</h4>
    @if (!Model.Any())
    {
        <p>No pending task requests.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Client</th>
                    <th>Pickup Location</th>
                    <th>Dropoff Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Description</td>
                        <td>@task.Client.Username</td>
                        <td>@task.PickupLatitude, @task.PickupLongitude</td>
                        <td>@task.DropoffLatitude, @task.DropoffLongitude</td>
                        <td>
                            @if (task.Status == "Pending")
                            {
                                <form method="post" action="@Url.Action("AcceptTask", new { id = task.Id })">
                                    <button type="submit" class="btn btn-primary">Accept</button>
                                </form>
                                <form method="post" action="@Url.Action("DeclineTask", new { id = task.Id })">
                                    <button type="submit" class="btn btn-danger">Decline</button>
                                </form>
                            }
                            else
                            {
                                <span>@task.Status</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
